<h1 class='mt-3'>Post編集</h1>

<%= form_with(model: @post) do |form| %>
  <% if @post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-3">
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :body, '本文' %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
  </div>

  <div class="text-center actions mt-3">
    <%= form.submit class: 'btn btn-dark' %>
  </div>
<% end %>

<%= render "form", post: @post %>

<br>

<div class='text-center mt-4'>
  <%= link_to '詳細', post_path(@post), class: 'link-dark text-decoration-none' %>
  |
  <%= link_to 'Post一覧', posts_path, class: 'link-dark text-decoration-none' %>
</div>
